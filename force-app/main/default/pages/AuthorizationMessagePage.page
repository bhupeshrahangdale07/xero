<apex:page controller="AuthorizationMessageController" sidebar="false" showHeader="false" lightningStyleSheets="true">
    <style>
        #myHeader{
        	position:fixed;
        	top:0px;
        	left:0px;
        	width:100%;
        	height:100%;
        	text-align:center;
        }
        #center-div{
          position: absolute;
          top: 50%;
          left: 50%;
         transform: translate(-50%,-50%);
		}
    </style>
    <apex:form >
        
		<div id="myHeader">   
            <img src="{!$Resource.logo}" width="150" height="80"/>
            <hr/>
            <div id="center-div" >
                <p style="font-size: 25px;">
                    {!message}
                </p>
            </div>
        </div>
       

    </apex:form>
    
</apex:page>